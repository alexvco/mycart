<!DOCTYPE html>
<html>
  <head>
    <title>Mycart</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller_path.split('/').join(' ') %> <%= action_name %>'>
    <%= yield %>

    <%= "<div style='margin-top:148px;'></div>".html_safe if Rails.env.development? %>
    <%= console if Rails.env.development? %>
  </body>
</html>
